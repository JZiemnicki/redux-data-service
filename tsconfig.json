{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES5",
    "module": "AMD",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "removeComments": true,
    "strictNullChecks": false,
    "outDir": "dist",
    "outFile": "dist/index.js",
    "baseUrl": "src",
    "rootDir": "src",
    "skipLibCheck": true,
    "lib": [
      "es6",
      "es7",
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "dist",
    "build",
    "config",
    "node_modules",
    "webpack.config.ts"
  ],
  "types": ["intern"]
}
