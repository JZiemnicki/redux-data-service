{
  "browser": {
    "requires": [
      "dist/test.bundle.js",
      "dist/vendor.bundle.js"
    ],
    "suites": [
      "dist/*.test.js"
    ]
  },
  "tunnelOptions": {
    "drivers": [
      { "name": "chrome", "version": "2.36" }
    ]
  },
  "environments": [
    {
      "browserName": "chrome",
      "chromeOptions": {
        "args": [
          "headless",
          "disable-gpu",
          "no-sandbox"
        ]
      },
      "fixSessionCapabilities": false
    }
  ],
  "configs": {
    "ci": {
      "reporters": [
        {
          "name": "simple"
        },
        {
          "name": "junit",
          "options": {
            "filename": "junit-results.xml"
          }
        }
      ]
    }
  }
}
